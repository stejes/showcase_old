{% extends "skeleton.twig" %}

{% block title %}Edit item{% endblock %}

{% block content %}
    <h1>Edit item {{ item.title }}</h1>
    <form action="item.php?action=edit&id={{ item.id }}" method="post" enctype="multipart/form-data">
        <input type="text" name="title" value="{{item.title}}">
        <input type="text" name="description" value="{{item.description}}">
        <label for="img">Foto wijzigen (max 1.9 Mb): </label>
        <input type="file" name="img" >
        <select name="sectionId">
            {% for section in sectionList %}
                {% set selected = "" %}
                {{section.id}} en {{item.section.id}}
                {% if section.id == item.section.id %}
                    
                    {% set selected = "selected"  %}
                {% endif %}

                <option value="{{ section.id }}" {{ selected }}>{{ section.name }}</option>
            {% endfor %}
        </select>
        <input type="submit" name="submit" value="Wijzigen">

    </form>

{% endblock %}